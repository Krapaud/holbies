# Variables d'environnement pour Docker
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Base de données PostgreSQL
POSTGRES_DB=holberton_db
POSTGRES_USER=holberton_user
POSTGRES_PASSWORD=secure_password_change_me

# URL de connexion à la base de données
DATABASE_URL=postgresql://holberton_user:secure_password_change_me@db:5432/holberton_db

# Sécurité de l'application
SECRET_KEY=your-super-secret-key-here-change-me-in-production

# Configuration de l'application
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Environnement
ENVIRONMENT=production
